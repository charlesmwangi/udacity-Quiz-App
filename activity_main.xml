            android:id="@+id/argentina"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:onClick="onCheckBoxClicked"
            android:text="Argentina" />

        <CheckBox
            android:id="@+id/france"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:onClick="onCheckBoxClicked"
            android:text="France" />

