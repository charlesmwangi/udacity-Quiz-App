            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="Which is the host nation for 2018 world cup?" />

        <RadioGroup
            android:id="@+id/group3"
            android:layout_width="fill_parent"
